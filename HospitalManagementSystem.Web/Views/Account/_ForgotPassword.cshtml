@model HospitalManagementSystem.Models.UIModels.ForgotPassword

<div class="modal-dialog" role="document" id="dvUpdateHtml">
	<div class="modal-content">
		<div class="modal-header" style="color: #31708f; background-color: #d9edf7; border-color: #bce8f1;">
			<h5 class="modal-title" id="forgotPasswordLabel">Forgot Password</h5>
			<button type="button" class="close" data-dismiss="modal" aria-label="Close" style="line-height:0">
				<span aria-hidden="true">&times;</span>
			</button>
		</div>

		<div class="modal-body">
			<form asp-action="ForgotPassword" asp-controller="Account" id="forgotPasswordForm" method="post" data-ajax="true" data-ajax-method="POST" data-ajax-update="#dvUpdateHtml" data-ajax-success="onSuccess">
				@if (!Model.Status && !String.IsNullOrEmpty(Model.Message))
				{
					<div class="alert alert-danger" id="forgotPasswordMessage">
						@Model.Message
					</div>

				}
				else if (Model.Status && !String.IsNullOrEmpty(Model.Message))
				{
					<div class="alert alert-info" id="forgotPasswordMessage">
						@Model.Message
					</div>

				}

				<div class="form-group">
					<label for="emailPhoneNumber">Please enter your email address or mobile number:</label>
					<input type="text" name="emailPhoneNumber" class="form-control" id="emailPhoneNumber" placeholder="Email or phone number">
				</div>
				<div class="modal-footer">
					<button type="submit" class="btn btn-secondary" id="cancelButton" data-dismiss="modal">Cancel</button>
					<button type="submit" class="btn btn-primary">Submit</button>
				</div>
			</form>

		</div>
	</div>
</div>



<script type="text/javascript">
	function onSuccess(formData){
			console.log(formData);
		}
	 $("#cancelButton, .close").on("click", function () {
		$("#forgotPasswordForm")[0].reset();
		$("#forgotPasswordMessage").text("").removeClass('alert-info alert-danger alert-success');
	});
</script>
