@model HospitalManagementSystem.Models.UIModels.LoginUIModel;

@{
    ViewData["Title"] = "Login";
}

@if(Model.status == false)
{
    <div class="alert alert-danger">
     @(Model.Message)
    </div>
}

@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{
    <div class="col">
        <div class="form-group m-2 p-2 col-4">
            <label for="Username">Username</label>
            @* <input type="text" id="Username" name="Username" class="form-control" placeholder="Email / Username"  /> *@

            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
            @* @Html.TextBoxFor(x=> x.Email,new html) *@

        </div>

        <div class="form-group  m-2 p-2 col-4">
            <label for="Password">Password</label>
            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="form-group col-4 m-2 p-2">
            <button type="submit" class="btn btn-primary col-4">Login</button>
        </div>
     

    </div>
    
}

