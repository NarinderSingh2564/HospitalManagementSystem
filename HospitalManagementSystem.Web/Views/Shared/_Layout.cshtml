<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />

	<meta http-equiv="X-UA-Compatible" content="IE=edge" />
	<title>@ViewData["Title"] - HospitalManagementSystem.Web</title>
	<meta content="width=device-width, initial-scale=1.0, shrink-to-fit=no"
		  name="viewport" />
	<link rel="icon"
		  href="~/theme/img/kaiadmin/favicon.ico"
		  type="image/x-icon" />

	<link href="~/theme/css/fonts.css" rel="stylesheet" />
	<link href="~/theme/css/fonts.min.css" rel="stylesheet" />
	<script src="~/theme/js/plugin/webfont/webfont.min.js"></script>

	<script>
		WebFont.load({
		  google: { families: ["Public Sans:300,400,500,600,700"] },
		  custom: {
			families: [
			  "Font Awesome 5 Solid",
			  "Font Awesome 5 Regular",
			  "Font Awesome 5 Brands",
			  "simple-line-icons",
			],
			urls: ["~/theme/css/fonts.css"],
		  },
		  active: function () {
			sessionStorage.fonts = true;
		  },
		});
	</script>
	<link rel="stylesheet" href="~/theme/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/theme/css/plugins.min.css" />
	<link rel="stylesheet" href="~/theme/css/kaiadmin.min.css" />
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">
	<link href="~/theme/css/fonts.css" rel="stylesheet" />
	<link href="~/theme/css/fonts.min.css" rel="stylesheet" />
</head>
<body>
	<div class="wrapper">
		<div class="container">
			<div class="page-inner">
				@RenderBody()
			</div>
		</div>
	</div>

	<!--   Core JS Files   -->
	<script src="~/theme/js/core/jquery-3.7.1.min.js"></script>
	<script src="~/theme/js/core/popper.min.js"></script>
	<script src="~/theme/js/core/bootstrap.min.js"></script>

	<!-- jQuery Scrollbar -->
	<script src="~/theme/js/plugin/jquery-scrollbar/jquery.scrollbar.min.js"></script>


	<!-- Chart JS -->
	<script src="~/theme/js/plugin/chart.js/chart.min.js"></script>

	<!-- jQuery Sparkline -->
	<script src="~/theme/js/plugin/jquery.sparkline/jquery.sparkline.min.js"></script>

	<!-- Chart Circle -->
	<script src="~/theme/js/plugin/chart-circle/circles.min.js"></script>

	<!-- Datatables -->
	<script src="~/theme/js/plugin/datatables/datatables.min.js"></script>

	<!-- Bootstrap Notify -->
	<script src="~/theme/js/plugin/bootstrap-notify/bootstrap-notify.min.js"></script>

	<!-- jQuery Vector Maps -->
	<script src="~/theme/js/plugin/jsvectormap/jsvectormap.min.js"></script>
	<script src="~/theme/js/plugin/jsvectormap/world.js"></script>

	<!-- Sweet Alert -->
	<script src="~/theme/js/plugin/sweetalert/sweetalert.min.js"></script>

	<!-- Kaiadmin JS -->
	<script src="~/theme/js/kaiadmin.min.js"></script>

	<script>
		$("#lineChart").sparkline([102, 109, 120, 99, 110, 105, 115], {
		  type: "line",
		  height: "70",
		  width: "100%",
		  lineWidth: "2",
		  lineColor: "#177dff",
		  fillColor: "rgba(23, 125, 255, 0.14)",
		});

		$("#lineChart2").sparkline([99, 125, 122, 105, 110, 124, 115], {
		  type: "line",
		  height: "70",
		  width: "100%",
		  lineWidth: "2",
		  lineColor: "#f3545d",
		  fillColor: "rgba(243, 84, 93, .14)",
		});

		$("#lineChart3").sparkline([105, 103, 123, 100, 95, 105, 115], {
		  type: "line",
		  height: "70",
		  width: "100%",
		  lineWidth: "2",
		  lineColor: "#ffa534",
		  fillColor: "rgba(255, 165, 52, .14)",
		});
	</script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
